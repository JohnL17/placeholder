<form>
    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Post a comment</legend>
        <div class="uk-margin">
            {{input data-test-comment-title class="uk-input comment-title" value=newTitle placeholder="Title"}}
        </div>
        <div class="uk-margin">
            {{input data-test-comment-email class="uk-input comment-email" value=newEmail placeholder="Email"}}
        </div>
        <div class="uk-margin">
            {{textarea data-test-comment-message class="uk-textarea comment-message" rows="5" value=newBody placeholder="Message"}}
        </div>
        <button class="uk-button uk-button-primary" data-test-create-comment-button {{action 'postComment'}}>Create</button>
    </fieldset>
</form>