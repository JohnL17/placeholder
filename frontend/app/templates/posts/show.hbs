<h3>Show post</h3>

<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
  <div class="uk-card-media-left uk-cover-container">
    <img src="https://picsum.photos/400/290?image={{model.post.id}}" alt="post picture" uk-cover>
  </div>
  <div class="uk-card-body">
    <h3 class="uk-card-title">{{model.post.title}}</h3>
    <p>{{model.post.body}}</p>
    {{#link-to "posts.edit" model.post.id class="uk-button uk-button-primary"}}
      Edit post
    {{/link-to}}
    <button class="uk-button uk-button-danger" {{action 'destroyPost'}}>Delete post</button>
  </div>
</div>

{{#each model.comments as |comment|}}
  <article class="uk-comment uk-comment-primary">
    <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
      <div class="uk-width-auto">
        <img class="uk-comment-avatar" src="https://api.adorable.io/avatars/80/{{comment.email}}" width="80" height="80" alt="comment picture">
      </div>
      <div class="uk-width-expand">
        <h4 class="uk-comment-title uk-margin-remove">{{comment.name}}</h4>
        <ul class="uk-comment-meta uk-subnav uk-margin-remove-top">
          <li>{{comment.email}}</li>
        </ul>
      </div>
    </header>
    <div class="uk-comment-body">
      <p>{{comment.body}}</p>
    </div>
  </article>
{{/each}}
