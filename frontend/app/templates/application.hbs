<div class="uk-container uk-container-expand uk-background-primary">
  <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
    <div class="uk-navbar-left uk-background-primary uk-light">
      {{#link-to "index" class="uk-logo" }} Placeholder {{/link-to}}
      <ul class="uk-navbar-nav">
        <li>
          {{#link-to "posts" data-test-nav-posts }} Posts {{/link-to}}
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li class="uk-active">
                {{#link-to "posts.new" data-test-nav-create-post }} Create post {{/link-to}}
              </li>
            </ul>
          </div>
        </li>
        <li>
          {{#link-to "gallery" data-test-nav-gallery }} Gallery {{/link-to}}
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li class="uk-active">
                {{#link-to "gallery.new" data-test-nav-create-gallery }} Create gallery {{/link-to}}
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
    <div class="uk-navbar-right uk-background-primary uk-light">
      <ul class="uk-navbar-nav">
        {{#if session.isAuthenticated}}
          <li>
            {{#link-to "me" data-test-nav-me }} My profile {{/link-to}}
          </li>
          <li>
            <a href="index" data-test-nav-logout {{action 'logout'}}>Logout</a>
          </li>
        {{else}}
          <li>
            {{#link-to "login" data-test-nav-login }} Login {{/link-to}}
          </li>
          <li>
            {{#link-to "registration" data-test-nav-registration }} Registration {{/link-to}}
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</div>
<div class="uk-container uk-container-small">
  <div class="body">
    {{outlet}} {{ember-notify}}
  </div>
</div>