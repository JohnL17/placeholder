<div class="uk-container uk-container-expand uk-background-primary">
  <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
    <div class="uk-navbar-left uk-background-primary uk-light">
      {{#link-to "index" class="uk-logo" }} Placeholder {{/link-to}}
      <ul class="uk-navbar-nav">
        <li>
          {{#link-to "posts" class="menu-posts" }} Posts {{/link-to}}
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li class="uk-active">
                {{#link-to "posts.new" class="menu-posts" }} Create post {{/link-to}}
              </li>
            </ul>
          </div>
        </li>
        <li>
          {{#link-to "gallery" class="menu-posts" }} Gallery {{/link-to}}
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li class="uk-active">
                {{#link-to "gallery.new" class="menu-posts" }} Create gallery {{/link-to}}
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
    <div class="uk-navbar-right uk-background-primary uk-light">
      <ul class="uk-navbar-nav">
        {{#if session.isAuthenticated}}
          <li>
            {{#link-to "me" class="menu-posts" }} My profile {{/link-to}}
          </li>
          <li>
            <a href="index" class="menu-posts" {{action 'logout'}}>Logout</a>
          </li>
        {{else}}
          <li>
            {{#link-to "login" class="menu-posts" }} Login {{/link-to}}
          </li>
          <li>
            {{#link-to "registration" class="menu-posts" }} Registration {{/link-to}}
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</div>
<div class="uk-container uk-container-small">
  <div class="body">
    {{outlet}} {{ember-notify}}
  </div>
</div>